{
  "identifier": "default",
  "description": "Default permissions",
  "windows": [
    "main"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    "core:event:allow-emit",
    "core:event:allow-emit-to",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:webview:default",
    "shell:default",
    "shell:allow-spawn",
    "shell:allow-kill",
    "process:default",
    "process:allow-exit",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-read",
    "fs:allow-exists",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA" },
        { "path": "$APPDATA/**" },
        { "path": "$DESKTOP" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$HOME" },
        { "path": "$HOME/**" },
        { "path": "$PICTURE" },
        { "path": "$PICTURE/**" },
        { "path": "$PUBLIC" },
        { "path": "$PUBLIC/**" },
        { "path": "$TEMPLATE" },
        { "path": "$TEMPLATE/**" },
        { "path": "$VIDEO" },
        { "path": "$VIDEO/**" },
        { "path": "**/*.jpg" },
        { "path": "**/*.jpeg" },
        { "path": "**/*.png" },
        { "path": "**/*.gif" },
        { "path": "**/*.webp" },
        { "path": "**/*.pdf" }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/backend",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}