{
  "productName": "Mark Grading Assistant",
  "identifier": "com.markgrading.assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Mark Grading Assistant",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' https://*.supabase.co https://*.supabase.com data: blob: asset:",
        "connect-src": "'self' http://localhost:* http://127.0.0.1:* https://*.supabase.co https://*.supabase.com ws://localhost:* ws://127.0.0.1:*",
        "media-src": "'self' https://*.supabase.co https://*.supabase.com blob: data:",
        "object-src": "'none'",
        "base-uri": "'self'",
        "form-action": "'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico"
    ],
    "targets": "all",
    "externalBin": [
      "binaries/backend"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}